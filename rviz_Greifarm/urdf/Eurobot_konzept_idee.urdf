<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="multishape">
<xacro:property name="pfad_1" value="package://urdf_tutorial/meshes/grundling.stl" />
<xacro:property name="pfad_2" value="package://urdf_tutorial/meshes/mittelling.stl" />
<xacro:property name="pfad_3" value="package://urdf_tutorial/meshes/endling.stl" />
<xacro:macro name="default_origin">
    <origin xyz="0 0 0" rpy="0 0 0"/>
</xacro:macro>
<xacro:macro name="default_border" params="lim">
    <limit effort="30" velocity="1.0" lower="${lim}" upper="50.7" />
</xacro:macro>
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>
  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  <link name="base_link">
    <visual>
      <geometry>

      </geometry>
    </visual>
  </link>

  <joint name="world_to_base_link" type="fixed">

    <parent link="base_link"/>
    <child link="fundii"/>
    <axis xyz=" 0 0 1"/>
    <xacro:default_border lim="500"/>

    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="fundii">
    <visual>
      <geometry>
        <mesh filename="${pfad_1}"/>
      </geometry>
      <material name="white"/>
    </visual>
  </link>

  <joint name="fundii_to_arm_1" type="prismatic">

    <parent link="fundii"/>
    <child link="arm_1"/>
    <axis xyz=" 0 1 0"/>
    <limit effort="30" velocity="1.0" lower="-42.2" upper="50.7" />
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  <link name="arm_1">
    <visual>
      <geometry>
        <mesh filename="${pfad_2}"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>
  <link name="right_leg">
    <visual>
      <geometry>
        <mesh filename="${pfad_3}"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>
  <joint name="base_to_right_leg" type="prismatic">

    <parent link="arm_1"/>
    <child link="right_leg"/>
    <axis xyz=" 0 0 1"/>
    <limit effort="30" velocity="1.0" lower="-80.2" upper="22.7" />
    <origin xyz="0 0 0"/>
  </joint>

</robot>

